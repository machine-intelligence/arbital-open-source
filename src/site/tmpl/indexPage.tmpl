{{/* index.tmpl is the template for the index page */}}
{{define "base"}}
<!DOCTYPE html>
<html>
<head>
	<title>Arbital</title>
	{{template "style"}}
	{{template "scripts"}}
	{{template "angular" .}}
	<script>
		// IndexCtrl is for the Index page.
		app.controller("IndexCtrl", function ($scope, pageService) {
			$scope.pageService = pageService;
		});
	</script>
</head>

<body ng-app="arbital" ng-controller="ArbitalCtrl">
<arb-navbar></arb-navbar>

<div class="index-body-div container-fluid" ng-controller="IndexCtrl">
	{{range .FeaturedDomains}}
		<div class="panel panel-default">
		  <div class="panel-heading">
				<h1 class="panel-title index-page-domain-link">
					<a ng-href="/domains/{[{pageService.pageMap['{{.DomainId}}'].alias}]}"
						ng-bind="pageService.pageMap['{{.DomainId}}'].title"></a>
				</h1>
			</div>
		  <div class="panel-body">
				<div class="thumbnail">
					<img src="{{.ImageUrl}}">
				</div>
		  </div>
		
		  <!-- List group -->
		  <ul class="list-group">
				{{range .ChildIds}}
					<li class="list-group-item">
						<arb-likes-page-title page-id="{{.}}"></arb-likes-page-title>
					</li>
				{{end}}
		  </ul>
		</div>
	{{end}}
</div>

<arb-footer></arb-footer>
</body>
</html>
{{end}}
