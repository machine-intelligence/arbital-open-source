{{/* newClaim.tmpl is the page for creating a new claim */}}
{{define "base"}}
<!DOCTYPE html>
<html>
<head>
	{{template "style"}}
	{{template "scripts"}}
	<script src="/static/js/newClaim.js"></script>
</head>

<body>

{{template "navbar" .User}}

<form class="newClaimForm">
	Claim: <input type="text" name="text" required="true"></br>
	Private <span title="This claim will only be accessible by people who have the link."><u>(?)</u></span>: <input type="checkbox" name="private"></br>
	Tag: <select name="tagId">
		<option value="0">-</option>
		{{range .Tags}}
			<option value="{{.Id}}">{{.Text}}</option>
		{{end}}
	</select></br>
	<input type="submit" value="Submit">
</div>
<p id="newClaimError"></p>

</body>
</html>
{{end}}
