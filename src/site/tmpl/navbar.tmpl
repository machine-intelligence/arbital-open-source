{{/* navbar.tmpl contains the navigation drop down menu shown at the top right of some pages. */}}
{{define "navbar"}}
<nav id="primary_nav_wrap" class="bHeader">
	<ul>
		{{if .IsLoggedIn}}
			<li><a href="#">&#x25BC; {{.Email}}</a>
				<ul>
					<li><a href="{{.LogoutLink}}" id="logout">Logout</a></li>
					<li><a href="/claims/new" id="newClaim">New Claim</a></li>
					{{if .IsAdmin}}
						<li><a href="/becomeUser/?id=0">Become User</a></li>
					{{end}}
				</ul>
			</li>
		{{else}}
			<li><a href="/signup/?continueUri={{.CurrentUri}}">Sign Up</a></li>
			<li><a href="{{.LoginLink}}">Log In</a></li>
		{{end}}
	</ul>
	<div class="clearfix"></div>
</nav>
{{end}}
